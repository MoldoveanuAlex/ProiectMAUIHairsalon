    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMAUIHairsalon"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent 
            Title="Bine ai venit" 
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent 
            Title="Despre" 
            ContentTemplate="{DataTemplate local:DesprePage}" />

        <ShellContent
            Title="Programarile mele"
            ContentTemplate="{DataTemplate local:ProgramareEntryPage}"/>

        <ShellContent
            Title="Saloanele mele"
            ContentTemplate="{DataTemplate local:SalonEntryPage}"
            />
    </TabBar>

</Shell>
